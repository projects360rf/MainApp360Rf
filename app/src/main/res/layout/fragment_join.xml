<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/frame"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".JoinFragment">

    <ImageView
        android:layout_width="120dp"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="120dp"
        android:src="@drawable/joinus"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="140dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#0288D1"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="JOIN 360 RESEARCH FOUNDATION"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/individualCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="18dp"
            android:padding="20dp"
            app:cardBackgroundColor="#CCE8F4"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:tag="image_tag"
                    android:layout_width="20dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_baseline_engineering_24"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Join As an Individual"
                        android:textColor="#012978"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="JOIN NOW"
                        android:padding="10dp"
                        android:background="@drawable/homebtn"
                        android:textColor="#FFFFFF"
                        android:layout_margin="10dp"
                        android:id="@+id/individual"
                        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"

                        />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/organisationCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:padding="20dp"
            app:cardBackgroundColor="#CCE8F4"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView

                    android:tag="image_tag"
                    android:layout_width="20dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_baseline_account_balance_24"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Join As an Organisation"
                        android:textColor="#012978"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="JOIN NOW"
                        android:id="@+id/org"
                        android:padding="10dp"
                        android:background="@drawable/homebtn"
                        android:textColor="#FFFFFF"
                        android:layout_margin="10dp"
                        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                        />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>