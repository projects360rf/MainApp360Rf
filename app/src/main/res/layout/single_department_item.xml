<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/organisationCardDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:cardBackgroundColor="#FFA500"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="360 Research Foundation donated 30K to the slum areas.."
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:tag="image_tag"
                android:id="@+id/image_department"
                app:civ_border_width="2dp"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:civ_border_color="#ABD8DD"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:src="@drawable/individual1"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>