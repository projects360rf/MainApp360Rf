<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/developer_card"
        android:layout_gravity="fill"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#f1ebda"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:id="@+id/developer_image"
                android:scaleType="centerCrop"
                app:civ_border_width="8dp"
                app:civ_border_color="#98F0FB"
                android:src="@drawable/individual1"/>

            <TextView
                android:id="@+id/developer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer Name"
                android:padding="5dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#03A9F4"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/developer_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer Post"
                android:padding="2dp"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="#03A9F4"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingTop="5sp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/developer_email_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/mail"
                        android:layout_marginEnd="10dp"/>

                    <ImageView
                        android:id="@+id/developer_linkedin_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/linkedin"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>